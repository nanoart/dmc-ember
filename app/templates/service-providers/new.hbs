<h2>Add a new service provider</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The SP name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=model.description class="form-control" placeholder="The description of the service provider"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Type</label>
    <div class="col-sm-10">
      {{input type="text" value=model.type class="form-control" placeholder="The SP type, e.g. SAML WS-FED"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveServiceProvider' model}}>Add</button>
    </div>
  </div>
</div>