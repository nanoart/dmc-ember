<div class="layout-row">
	<div class="layout-column flex-80 layout-align-center-center">
<div class="tab-content clearfix">
	<div class="tab-pane {{if (eq index 0) 'active'}}">
		<h3> Scenario</h3>
		<!--
		{{#power-select selected=scenario options=scenarios onchange=(action "selectScenario") as |scenarioname|}}
			{{scenarioname}}
		{{/power-select}}
	-->
		{{#paper-select label="Scenarios" options=scenarios selected=scenario 	onChange=(action (mut scenario))
		as |scenarioname|}}
			{{scenarioname}}
		{{/paper-select}}

		{{paper-input flex=30 label="Name" value=name onChange=(action (mut name))}}

	</div>

	<div class="tab-pane {{if (eq index 1) 'active'}}">
		<div class="form-group">
			<label class="control-label">Company Name</label>
			<input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Name" />
		</div>
		<div class="form-group">
			<label class="control-label">Company Address</label>
			<input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Address"  />
		</div>
	</div>	
	<div class="tab-pane {{if (eq index 2) 'active'}}">
		<h3>Users</h3>
	</div>
	<div class="tab-pane {{if (eq index 3) 'active'}}">
		<h3>Summary</h3>
	</div>
</div>
	</div>
</div>
{{#paper-toolbar accent=true}}
  {{#paper-toolbar-tools}}
	{{#paper-button disabled=(eq index 0) onClick=(action "backStep")}}{{paper-icon 'keyboard arrow left'}}Back{{/paper-button}}

    <span class="flex"></span>
{{#paper-button disabled=(eq index 3) onClick=(action "nextStep")}}Next{{paper-icon 'keyboard arrow right'}}{{/paper-button}}
{{#paper-button disabled=(not-eq index 3)}}Finish {{paper-icon 'done'}}{{/paper-button}}
  
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}



