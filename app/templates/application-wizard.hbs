<div id="rootwizard1" class="form-wizard form-wizard-horizontal">
	<form class="form floating-label">
		<div class="form-wizard-nav">
			<div class="progress" style="width:{{percentWidth}}">
				<div class="progress-bar progress-bar-primary" style="width:{{percent}}"></div>
			</div>
			<ul class="nav nav-justified">
				<li class="{{if (eq index 0) 'active' 'done'}}"><a href="#tab1" data-toggle="tab"><span class="step">1</span> <span class="title">Scenario</span></a></li>
				<li class="{{if (eq index 1) 'active'}} {{if (gt index 1) 'done'}}"><a href="#tab2" data-toggle="tab"><span class="step">2</span> <span class="title">Logon Procedure</span></a></li>
				<li class="{{if (eq index 2) 'active'}} {{if (gt index 2) 'done'}}"><a href="#tab3" data-toggle="tab"><span class="step">3</span> <span class="title">Users</span></a></li>
				<li class="{{if (eq index 3) 'active'}}"><a href="#tab4" data-toggle="tab"><span class="step">4</span> <span class="title">CONFIRM</span></a></li>
			</ul>
		</div><!--end .form-wizard-nav -->
	</form>
</div>
