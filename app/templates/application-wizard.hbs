<div id="rootwizard1" class="form-wizard form-wizard-horizontal">
	<form class="form floating-label">
		<div class="form-wizard-nav">
			<div class="progress" style="width:{{percentWidth}}">
				<div class="progress-bar progress-bar-primary" style="width:{{percent}}"></div>
			</div>
			<ul class="nav nav-justified">
				<li class="active"><a href="#tab1" data-toggle="tab"><span class="step">1</span> <span class="title">Scenario</span></a></li>
				<li><a href="#tab2" data-toggle="tab"><span class="step">2</span> <span class="title">Logon Procedure</span></a></li>
				<li><a href="#tab3" data-toggle="tab"><span class="step">3</span> <span class="title">Users</span></a></li>
				<li><a href="#tab4" data-toggle="tab"><span class="step">4</span> <span class="title">CONFIRM</span></a></li>
			</ul>
		</div><!--end .form-wizard-nav -->
	</form>
</div>

<div class="stepwizard">
	<div class="stepwizard-row setup-panel">
		<div class="stepwizard-step">
			<a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
			<p>Scenario</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
			<p>Logon Procedure</p>
		</div>
		<div class="stepwizard-step">
			<a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
			<p>Users</p>
		</div>
	</div>
</div>




{{#paper-content}}
	<h3> Scenario</h3>
	<!--
	{{#power-select selected=scenario options=scenarios onchange=(action "selectScenario") as |scenarioname|}}
		{{scenarioname}}
	{{/power-select}}
-->
	{{#paper-select label="Scenarios" options=scenarios selected=scenario 	onChange=(action (mut scenario))
	as |scenarioname|}}
		{{scenarioname}}
	{{/paper-select}}

	{{paper-input flex=30 label="Name" value=name onChange=(action (mut name))}}

	<div class="form-group">
		<label class="control-label">Last Name</label>
		<input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
	</div>
{{/paper-content}}

{{#paper-content}}
	<div class="form-group">
		<label class="control-label">Company Name</label>
		<input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Name" />
	</div>
	<div class="form-group">
		<label class="control-label">Company Address</label>
		<input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Address"  />
	</div>
{{/paper-content}}	

{{#paper-content}}
<h3>Summary</h3>
{{/paper-content}}
<div class="layout-row">

{{#paper-button onClick=(action "nextStep")}}Next{{/paper-button}}
{{#paper-button disabled=true}}Finish!{{/paper-button}}
</div>
